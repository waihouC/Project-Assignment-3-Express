{{#extends 'base'}}

{{#block 'content'}}

<div class="row mb-4 position-relative">
    <h1 class="display-4">Update {{product.name}}</h1>
    <div class="col-12 py-1 bg-dark position-absolute bottom-0 divider divider1"></div>
</div>

<div class="row">
    <div class="col-11 col-lg-8 mx-auto d-flex flex-column bg-white p-3">
        <form method="POST">
            {{{form}}}
            <div class="d-flex justify-content-center">
                <input type="submit" value="Edit Product" class="btn btn-primary m-3"/>
                <a href="/products/{{product.id}}/details" class="btn btn-danger m-3">Cancel</a>
            </div>
        </form>
    </div>
</div>

{{/block}}

{{/extends}}